<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="115dp"
    android:layout_height="135dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="125dp"
        android:background="@drawable/styles_gray_backgrounds"
        android:orientation="vertical">

        <com.skydoves.elasticviews.ElasticImageView
            android:id="@+id/list_1st_imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/styles_edit_texts"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:elevation="2dp"
            android:padding="2dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/list_1st_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:hint="@string/tv_hint_title"
            android:textColor="#000"
            android:textColorHint="#686767"
            android:textSize="@dimen/list_1st_title" />

    </LinearLayout>

</LinearLayout>